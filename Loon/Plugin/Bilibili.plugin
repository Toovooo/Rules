#!name=哔哩哔哩
#!desc=拦截广告 解锁画质
#!icon=https://raw.githubusercontent.com/Toovooo/Rules/master/Icon/Black/Bilibili.png

[Rewrite]
# IP请求,地理位置请求
^https:\/\/app\.bilibili\.com\/x\/resource\/ip reject
^https:\/\/api\.bilibili\.com\/x\/web-interface\/zone\?jsonp=jsonp$ reject-200

# 首页 DefaultWord,推荐,热搜发现,右上角活动,标签页,观影页,直播,直播间商品广告浮窗
^https:\/\/(grpc\.biliapi\.net|app\.bilibili\.com)\/bilibili\.app\.interface\.v1\.Search\/DefaultWords$ reject
^https:\/\/api\.live\.bilibili\.com\/xlive\/e-commerce-interface\/v1\/ecommerce-user\/get_shopping_info\? reject-dict

[Script]
# Proto 动态广告,后台播放限制,播放页广告
http-response ^https:\/\/(app\.bilibili\.com|grpc\.biliapi\.net)\/bilibili\.app\.(view|viewunite)\.v1\.View\/(View|ViewProgress) script-path = https://raw.githubusercontent.com/RuCu6/QuanX/main/Scripts/bilibili/biliProto.js, requires-body = true, tag = 动态广告
http-response ^https:\/\/(app\.bilibili\.com|grpc\.biliapi\.net)\/bilibili\.app\.dynamic\.v2\.Dynamic\/DynAll script-path = https://raw.githubusercontent.com/RuCu6/QuanX/main/Scripts/bilibili/biliProto.js, requires-body = true, tag = 动态广告
http-response ^https:\/\/(app\.bilibili\.com|grpc\.biliapi\.net)\/bilibili\.app\.interface\.v1\.Teenagers\/ModeStatus script-path = https://raw.githubusercontent.com/RuCu6/QuanX/main/Scripts/bilibili/biliProto.js, requires-body = true, tag = 动态广告
http-response ^https:\/\/(app\.bilibili\.com|grpc\.biliapi\.net)\/bilibili\.community\.service\.dm\.v1\.DM\/DmView script-path = https://raw.githubusercontent.com/RuCu6/QuanX/main/Scripts/bilibili/biliProto.js, requires-body = true, tag = 动态广告
http-response ^https:\/\/(app\.bilibili\.com|grpc\.biliapi\.net)\/bilibili\.main\.community\.reply\.v1\.Reply\/MainList script-path = https://raw.githubusercontent.com/RuCu6/QuanX/main/Scripts/bilibili/biliProto.js, requires-body = true, tag = 动态广告
http-response ^https:\/\/(app\.bilibili\.com|grpc\.biliapi\.net)\/bilibili\.polymer\.app\.search\.v1\.Search\/SearchAll script-path = https://raw.githubusercontent.com/RuCu6/QuanX/main/Scripts/bilibili/biliProto.js, requires-body = true, tag = 动态广告

# 首页 DefaultWord,推荐,热搜发现,右上角活动,标签页,观影页,直播,直播间商品广告浮窗
http-response ^https:\/\/app\.bilibili\.com\/x\/v2\/(feed\/index(\/story)?|search\/square)\? script-path = https://raw.githubusercontent.com/Toovooo/Rules/master/Script/Bilibili/bili.js, requires-body = true, tag = 广告浮窗
http-response ^https:\/\/app\.bilibili\.com\/x\/resource\/(top\/activity|show\/tab\/v2)\? script-path = https://raw.githubusercontent.com/Toovooo/Rules/master/Script/Bilibili/bili.js, requires-body = true, tag = 广告浮窗
http-response ^https:\/\/api\.bilibili\.com\/pgc\/page\/(bangumi|cinema\/tab\?) script-path = https://raw.githubusercontent.com/Toovooo/Rules/master/Script/Bilibili/bili.js, requires-body = true, tag = 广告浮窗
http-response ^https:\/\/api\.live\.bilibili\.com\/xlive\/app-room\/v1\/index\/getInfoByRoom\? script-path = https://raw.githubusercontent.com/Toovooo/Rules/master/Script/Bilibili/bili.js, requires-body = true, tag = 广告浮窗

# 开屏广告
http-response ^https:\/\/app\.bilibili\.com\/x\/v2\/splash\/(brand\/list|event\/list2|list|show)\? script-path = https://raw.githubusercontent.com/Toovooo/Rules/master/Script/Bilibili/bili.js, requires-body = true, tag = 开屏广告

# 我的页面 解锁1080P高码率,4K画质,皮肤推送
http-response ^https:\/\/app\.bilibili\.com\/x\/v2\/account\/(mine(\/ipad)?|myinfo)\? script-path = https://raw.githubusercontent.com/Toovooo/Rules/master/Script/Bilibili/bili.js, requires-body = true, tag = 解锁高码率
http-response ^https:\/\/app\.bilibili\.com\/x\/resource\/show\/skin\? script-path = https://raw.githubusercontent.com/Toovooo/Rules/master/Script/Bilibili/bili.js, requires-body = true, tag = 解锁高码率

[MITM]
hostname = app.bilibili.com, api.bilibili.com, api.live.bilibili.com, grpc.biliapi.net
